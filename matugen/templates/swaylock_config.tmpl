# Swaylock configuration generated by Matugen
# Background image from Hypr cache (set in apply_matugen.sh)
image=/var/home/maudi/.dotfiles/hypr/cache/current_wallpaper.png

# Background color (fallback if image fails)
color={{ colors.surface.default.hex }}

# Ring colors
ring-color={{ colors.primary.default.hex }}80
inside-color={{ colors.surface.default.hex }}80

# Text colors
text-color={{ colors.on_surface.default.hex }}
text-clear-color={{ colors.on_surface.default.hex }}
text-ver-color={{ colors.on_surface.default.hex }}
text-wrong-color={{ colors.on_error.default.hex }}

# Key highlight colors
key-hl-color={{ colors.primary.default.hex }}
bs-hl-color={{ colors.error.default.hex }}
caps-lock-key-hl-color={{ colors.secondary.default.hex }}

# Separator color
separator-color={{ colors.outline.default.hex }}80

# Line color
line-color={{ colors.outline.default.hex }}80

# Verification state colors
inside-ver-color={{ colors.primary.default.hex }}40
ring-ver-color={{ colors.primary.default.hex }}

# Wrong state colors
inside-wrong-color={{ colors.error.default.hex }}40
ring-wrong-color={{ colors.error.default.hex }}

# Clear state colors
inside-clear-color={{ colors.secondary.default.hex }}40
ring-clear-color={{ colors.secondary.default.hex }}

# Layout options
indicator-radius=120
indicator-thickness=7
ring-radius=120
font=sans-serif
clock-font-size=14
grace=0
grace-no-mouse
grace-no-touch
fade-in=0.1
