# -----------------------------------------------------
# INIT
# -----------------------------------------------------

# -----------------------------------------------------
# Exports
# -----------------------------------------------------
export EDITOR=nvim
export ZSH="$HOME/.oh-my-zsh"
export PATH=$PATH:~/.cargo/bin/

# -----------------------------------------------------
# Clean PATH from Cursor AppImage interference
# -----------------------------------------------------
clean_cursor_path() {
    # Remove Cursor AppImage mount directories from PATH
    # Unset ARGV0 which causes Rust to think Cursor is a valid proxy
    unset ARGV0
}

# Apply the cleaning function
clean_cursor_path
